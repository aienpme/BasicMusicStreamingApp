<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMA" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">@color/error</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- System UI -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.BMA.CardView</item>
        <item name="materialButtonStyle">@style/Widget.BMA.Button</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.BMA.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.BMA.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/background</item>
        <item name="backgroundTint">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Primary Button - for main actions -->
    <style name="Widget.BMA.Button.Primary" parent="Widget.BMA.Button">
        <item name="android:textColor">@color/background</item>
        <item name="backgroundTint">@color/text_primary</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Secondary Button - for less important actions -->
    <style name="Widget.BMA.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/text_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple</item>
    </style>
    
    <!-- Destructive Button - for dangerous actions -->
    <style name="Widget.BMA.Button.Destructive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#FF6B6B</item>
        <item name="strokeColor">#FF6B6B</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">#1AFF6B6B</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources> 