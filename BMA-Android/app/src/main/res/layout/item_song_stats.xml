<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/download_card_background"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <!-- Album artwork -->
    <ImageView
        android:id="@+id/album_artwork"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/artwork_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        tools:src="@drawable/ic_music_note" />

    <!-- Song info section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="The Less I Know The Better" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Tame Impala" />

    </LinearLayout>

    <!-- Stats section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/listening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0min"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2h 15min" />

        <TextView
            android:id="@+id/play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 plays"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            tools:text="23 plays" />

    </LinearLayout>

</LinearLayout>