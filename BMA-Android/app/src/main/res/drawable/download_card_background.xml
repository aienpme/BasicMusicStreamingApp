<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow/Elevation Effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Main Card Background -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            
            <!-- Subtle gradient from dark gray to slightly lighter -->
            <gradient
                android:startColor="#242424"
                android:endColor="#1A1A1A"
                android:angle="135"
                android:type="linear" />
            
            <corners android:radius="12dp" />
            
            <!-- Subtle border for definition -->
            <stroke
                android:width="0.5dp"
                android:color="#404040" />
                
        </shape>
    </item>
    
</layer-list>